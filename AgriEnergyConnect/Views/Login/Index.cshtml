@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <style>
        body {
            background-image: url('/images/beautiful-view-green-farm-field-600nw-2470800699.webp');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .login-box {
            background-color: rgba(0, 0, 0, 0.6);
            padding: 30px;
            border-radius: 10px;
            width: 300px;
            text-align: center;
        }

        select, button {
            width: 100%;
            padding: 10px;
            margin-top: 15px;
            border-radius: 5px;
            border: none;
        }

        button {
            background-color: #28a745;
            color: white;
            cursor: pointer;
        }

        button:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <h2>Select Your Role</h2>
        <form asp-controller="Login" asp-action="Index" method="post">
            <select name="selectedRole" required>
                <option value="">-- Choose Role --</option>
                <option value="Farmer">Farmer</option>
                <option value="Employee">Employee</option>
            </select>
            <button type="submit">Login</button>
        </form>
    </div>
</body>
</html>
