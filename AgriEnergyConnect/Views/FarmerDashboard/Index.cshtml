@{
    ViewBag.Title = "Farmer Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Farmer Dashboard</title>
    <style>
        body {
            background-image: url('/images/beautiful-view-green-farm-field-600nw-2470800699.webp');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .dashboard {
            background-color: rgba(0,0,0,0.6);
            padding: 30px;
            border-radius: 10px;
            width: 300px;
            text-align: center;
        }

        h2 {
            margin-bottom: 30px;
        }

        a {
            display: block;
            padding: 10px;
            margin: 10px 0;
            background-color: #28a745;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

            a:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>
    <div class="dashboard">
        <h2>Farmer Dashboard</h2>
        <a href="/Product/Add">Add Product</a>
        <a href="/Product/ViewMyProducts">View My Products</a>
        <a href="/SustainableHub/Index">Sustainable Farming Hub</a>
        <a href="/Forum/Index">Join the Discussion Forum</a>
    </div>
</body>
</html>
