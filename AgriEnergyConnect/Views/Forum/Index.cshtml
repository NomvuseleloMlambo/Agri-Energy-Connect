@model List<AgriEnergyConnect.Models.ForumPost>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Discussion Forum</title>
    <style>
        body {
            background-image: url('/images/beautiful-view-green-farm-field-600nw-2470800699.webp');
            background-size: cover;
            background-position: center;
            font-family: Arial, sans-serif;
            color: white;
            padding: 40px;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .forum-container {
            background-color: rgba(0, 0, 0, 0.6);
            padding: 20px;
            border-radius: 10px;
            max-width: 900px;
            margin: auto;
        }

        .post {
            border-bottom: 1px solid #ccc;
            padding: 15px 0;
        }

            .post:last-child {
                border-bottom: none;
            }

        .meta {
            font-size: 0.9em;
            color: #ccc;
        }

        .create-button {
            text-align: center;
            margin-bottom: 20px;
        }

        a.button {
            background-color: #28a745;
            padding: 10px 20px;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

            a.button:hover {
                background-color: #218838;
            }

        .message {
            text-align: center;
            color: lightgreen;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="forum-container">
        <div class="header">
            <h1>Join the Discussion Forum</h1>
        </div>

        @if (TempData["Message"] != null)
        {
            <p class="message">@TempData["Message"]</p>
        }

        <div class="create-button">
            <a href="/Forum/Create" class="button">Start a New Discussion</a>
        </div>

        @foreach (var post in Model)
        {
            <div class="post">
                <h3>@post.Title</h3>
                <p>@post.Message</p>
                <p class="meta">Posted by @post.AuthorUsername on @post.Timestamp.ToString("MMM dd, yyyy HH:mm")</p>
            </div>
        }
    </div>
</body>
</html>
