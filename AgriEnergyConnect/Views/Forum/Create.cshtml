@model AgriEnergyConnect.Models.ForumPost
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>New Post</title>
    <style>
        body {
            background-image: url('/images/beautiful-view-green-farm-field-600nw-2470800699.webp');
            background-size: cover;
            background-position: center;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: white;
        }

        .form-box {
            background-color: rgba(0, 0, 0, 0.6);
            padding: 30px;
            border-radius: 10px;
            width: 500px;
        }

        input, textarea, button {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border-radius: 5px;
            border: none;
            font-family: Arial;
        }

        textarea {
            resize: vertical;
            min-height: 100px;
        }

        button {
            background-color: #28a745;
            color: white;
        }

            button:hover {
                background-color: #218838;
            }

        .validation {
            color: red;
        }
    </style>
</head>
<body>
    <div class="form-box">
        <h2>Start a New Post</h2>

        <form asp-action="Create" method="post">
            <label>Title:</label>
            <input asp-for="Title" autocomplete="off" />
            <span asp-validation-for="Title" class="validation"></span>

            <label>Message:</label>
            <textarea asp-for="Message" autocomplete="off"></textarea>
            <span asp-validation-for="Message" class="validation"></span>

            <button type="submit">Post</button>
        </form>
    </div>
</body>
</html>
